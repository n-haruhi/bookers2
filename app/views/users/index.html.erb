<div class="container">
  <div class="row">
    <div class="col-md-3 my-3">
      <div sidebar_fixed>
        <!-- ユーザーの詳細 -->
        <%= render 'list_show', user: @user %>
        <!-- 新規投稿画面 -->
        <%= render 'books/list_new', book: @book %>
      </div>
    </div>
    <div class="offset-md-1 col-md-8 my-3">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
