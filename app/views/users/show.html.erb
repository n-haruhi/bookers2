<div class="container">
  <div class="row">
    <div class="col-md-3 my-3">
      <div sidebar_fixed>
        <!-- ユーザーの詳細 -->
        <%= render 'list_show', user: @user %>
        <!-- 新規投稿画面 -->
        <%= render 'books/list_new', book: @book %>
      </div>
    </div>
    <div class="offset-md-1 col-md-8 my-3">
    <!-- 投稿一覧画面 -->
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to image_tag(book.user.get_profile_image(100, 100)), user_path(book.user) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>