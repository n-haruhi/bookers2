<h1>Editing Book</h1>

<% if book.errors.any? %>
  <%= book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <div class="vstack gap-3">
    <div class="p-2">
      <label for="inputTitle">Title</label><br>
      <%= f.text_field :title, autofocus: true, id:"inputTitle" %><br>
    </div>
    <div class="p-2">
      <label for="inputOpinion">Opinion</label><br>
      <%= f.text_area :Opinion, autofocus: true, id:"inputOpinion" %><br>
    </div>
    <div class="p-2">
      <%= f.submit "Update Book", class: "btn btn-secondary" %>
    </div>
  </div>

<% end %>